   <!-- ========= Secci√≥n: Mostrar TODOS los estilos + previews QR autom√°ticos ========= -->
    <hr />

    <h2 class="text-center mb-4">Listado de Estilos QR</h2>
    <div class="row">
      <!-- Recorremos cada estilo y creamos el contenedor donde luego el JS pondr√° el QRCodeStyling -->
      <div
        class="col-sm-6 col-md-4 col-lg-3 mb-4"
        v-for="(style, index) in styles"
        :key="style.styleName || style.name"
      >
        <div class="card shadow-sm">
          <div class="card-body text-center">
            <!-- Nombre del estilo -->
            <h5 class="card-title">
              {{ style.styleName ? style.styleName : style.name }}
            </h5>

            <!-- Este div es el que QRCodeStyling rellenar√° -->
            <div
              :id="'qr-preview-' + index"
              style="width: 100px; height: 100px; margin: auto;"
            ></div>

            <!-- Si styleName existe, mostramos bot√≥n eliminar -->
            <button
              v-if="style.styleName"
              class="btn btn-sm btn-danger mt-2"
              @click="deleteStyle(style.styleName)"
            >
              üóëÔ∏è Eliminar
            </button>
          </div>
        </div>
      </div>
    </div>
    <!-- ========= /Fin secci√≥n Previews autom√°ticos ========= --> 

       <div class="mb-3">
          <label class="form-label d-block">Selecciona el Estilo</label>
          <div class="d-flex justify-content-around flex-wrap">
            <div
              v-for="(style, index) in styles"
              :key="index"
              class="text-center me-2 mb-2"
            >
              <input
                type="radio"
                v-model="selectedStyle"
                :value="index"
                class="btn-check"
                :id="`styleRadio-${index}`"
              />
