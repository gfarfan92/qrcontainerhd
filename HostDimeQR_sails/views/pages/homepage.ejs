<div id="app" class="container mt-5">
  <!-- ========= Sección: Formulario Generar QR ========= -->
  <div class="row justify-content-center">
    <div class="col-md-6 bg-white p-4 shadow rounded">
      <h1 class="text-center mb-4">Generador de Código QR HostDime</h1>
      <div class="text-end mb-3">
        <form method="POST" action="/session/logout">
          <button type="submit" class="btn btn-danger">Cerrar Sesión</button>
        </form>
      </div>

      <!-- Input de URL -->
      <div class="mb-3">
        <label for="urlInput" class="form-label">Ingresa la URL</label>
        <input type="text" id="urlInput" v-model="url" class="form-control" placeholder="https://example.com"
          required />
      </div>

      <!-- Input de URL Personalizada -->
      <div class="mb-3">
        <label for="personalUrl" class="form-label">URL personalizada (opcional)</label>
        <input type="text" id="personalUrl" v-model="personalUrl" class="form-control"
          placeholder="Ejemplo: mi-enlace" />
      </div>
      <!-- Selección estilo traido desde label-styles.ejs  -->
      <%- include('./label-styles') %>



        <!-- Selección de Tamaño y Formato -->
        <div class="mb-3 row">
          <div class="col-sm-6">
            <label for="sizeInput" class="form-label">Tamaño (px)</label>
            <select v-model="size" id="sizeInput" class="form-select">
              <option value="300">300</option>
              <option value="500">500</option>
              <option value="1200">1200</option>
            </select>
          </div>
          <div class="col-sm-6">
            <label for="typeSelect" class="form-label">Formato</label>
            <select v-model="type" id="typeSelect" class="form-select">
              <option value="svg">SVG</option>
              <option value="png">PNG</option>
            </select>
          </div>
        </div>




        <!-- Botones Generar QR -->
        <div class="row justify-content-center my-3">
          <div class="col-md-6 text-center mb-2">
            <button class="btn btn-success w-100" @click="generarQR">
              Generar QR
            </button>
          </div>

          <!--Ir a Personalizar -->
          <div class="col-md-6 text-center mb-2">
            <a href="/pages/create-styles" class="btn btn-primary w-100">Personalizar</a>

          </div>
        </div>




        <!-- URL corta generada -->
        <p v-if="shortUrl" class="mt-3 text-center text-primary fw-bold">
          {{ shortUrl }}
        </p>

        <!-- Botón de descarga -->
        <div v-if="qrImage" class="text-center mt-3">
          <a :href="qrImage" :download="`Hay-tienes-tu-qr-HOSTDIME.${type}`" class="btn btn-info">Descargar QR</a>
        </div>
    </div>


    <!-- Modal para mostrar el QR generado -->
    <div class="modal fade" id="qrModal" tabindex="-1" aria-labelledby="qrModalLabel" aria-hidden="true" ref="qrModal">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="qrModalLabel">Tu código QR</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>

          <div class="modal-body text-center">
            <img v-if="type === 'png'" :src="qrImage" alt="Código QR" class="img-fluid" />
            <p v-if="type === 'png'">
              Short URL:
              <a :href="shortUrl" target="_blank">{{ shortUrl }}</a>
            </p>
            <div v-else>
              <!-- Para SVG mostramos el mismo <img> (es base64) y un botón para abrir en nueva pestaña -->
              <img :src="qrImage" alt="Código QR SVG" class="img-fluid mb-2" />
              <p>
                Short URL:
                <a :href="shortUrl" target="_blank">{{ shortUrl }}</a>
              </p>
              <button class="btn btn-primary" @click="abrirSVGEnNuevaPestana">
                Ver SVG en nueva pestaña
              </button>


            </div>
          </div>
          <!-- Botón de descarga -->
          <div v-if="qrImage" class="text-center mt-3">
            <a :href="qrImage" :download="`Hay-tienes-tu-qr-HOSTDIME.${type}`" class="btn btn-info">Descargar QR</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- /Modal -->
</div>
</div>
<!-- ========= /Fin sección Generar QR ========= -->