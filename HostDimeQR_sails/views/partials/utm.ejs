<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-12 col-lg-12">

  



      <div class="container-fluid ">
        <div class="row">
<div class="col-md-12 ">
    <label for="urlInput" class="col-md-10 form-label">Ingresa la URL</label>
      <input type="text" id="urlInput" name="url" class=" col-md-10 form-control mb-3" v-model="url"
        placeholder="https://example.com" required />
</div>
          <div class=" col-md-6">
            <label for="source" class="form-label">utm_source</label>
            <input type="text" id="source" name="utm_source" v-model="utm_source" class="col-md-2 form-control mb-3" />
          </div>
          <div class="col-md-6">
            <label for="medium" class="form-label">utm_medium</label>
            <input type="text" id="medium" name="utm_medium" v-model="utm_medium" class="col-md-2 form-control mb-3" />
          </div>

        </div>
        <div class="row">


          <div class="col-md-6">
            <label for="campaign" class="form-label">utm_campaign</label>
            <input type="text" id="campaign" name="utm_campaign" v-model="utm_campaign"
              class="col-md-2 form-control mb-3" />
          </div>
          <div class="col-md-6">
            <label for="term" class="form-label">utm_term</label>
            <input type="text" id="term" name="utm_term" v-model="utm_term" class="col-md-2 form-control mb-3" />

          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <label for="content" class="form-label">utm_content</label>
            <input type="text" id="content" name="utm_content" v-model="utm_content"
              class="col-md-2 form-control mb-4" />
          </div>
        </div>


        <div v-if="utmUrlGenerada" class="alert alert-primary">
          <label for="">
          <strong>URL con UTM:</strong> <a :href="utmUrlGenerada" target="_blank">{{ utmUrlGenerada }}</a>
          </label>
        </div>

      </div>

    </div>
  </div>
</div>